<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lec.spring.repository.ReviewRepository">
    <insert id="write" parameterType="com.lec.spring.domain.Review">
        INSERT INTO d1_review (sellerKey, buyerKey, reviewScore, reviewDetail)
        VALUES (#{sellerKey}, #{buyerKey},) #{reviewScore}, #{reviewDetail})
    </insert>

    <select id="findByBuyerKey" resultType="com.lec.spring.domain.Review">
        SELECT *
        FROM d1_review
        WHERE buyerKey = #{buyerKey}
    </select>
</mapper>